@model IEnumerable<E_Commerce.Entity.Product>

<div id="myCarousel" class="carousel slide homCar">
    <div class="carousel-inner">
        <div class="item active">
            <img style="width:100%" src="/Site/assets/img/bootstrap_free-ecommerce.png" alt="bootstrap ecommerce templates">
            <div class="carousel-caption">
                <h4>Bootstrap shopping cart</h4>
                <p><span>Very clean simple to use</span></p>
            </div>
        </div>
        @foreach (var item in @Model)
        {
            <div class="item">
                <a href="/Home/ProductDetails/@item.Id"> <img style="width:100%;max-width:698px;max-height:327px;min-height:327px;min-width:698px" src="~/Content/Images/@item.Image" alt="bootstrap ecommerce templates"> </a>
                <div class="carousel-caption">
                    <h4>@item.Name</h4>
                    <p><span>@item.Price ₺</span></p>
                </div>
            </div>
        }
        <a class="left carousel-control" href="#myCarousel" data-slide="prev"><</a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">></a>

    </div>
</div>